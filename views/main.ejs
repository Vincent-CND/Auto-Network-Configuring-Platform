<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Main</title>
  <link rel="stylesheet" href="/styles/main.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="deploy.js"></script>
</head>

<body>
  <main class="page">

    <!-- DHCP -->
    <section>
      <h3 class="section-title">DHCP</h3>
      <div class="card">
        <div class="grid-2">
          <input class="pill" type="text" placeholder="POOL" id="pool">
          <input class="pill" type="text" placeholder="Network" id="Network">
          <input class="pill" type="text" placeholder="Default Router" id="defaultRouter">
          <input class="pill" type="text" placeholder="DNS Server" id="dnsServer">
        </div>

        <div class="center-row">
          <input class="pill" type="text" placeholder="IP DHCP Excluded" id="excluded">
        </div>
      </div>
    </section>

    <!-- VLAN -->
    <section>
      <h3 class="section-title">VLAN</h3>

      <div class="card">

        <div class="grid-2">
          <input class="pill" type="text" placeholder="VLAN Number" id="vlanNum">
          <input class="pill" type="text" placeholder="Name" id="vlanName">
        </div>

        <!-- CHECKBOX -->
        <div class="check-row">
          <label class="check">
            <input type="checkbox" id="assignedCheck">
            Assigned ports
          </label>

          <label class="check">
            <input type="checkbox" id="trunkCheck">
            Trunks
          </label>
        </div>

        <!-- RANGE (ẩn mặc định) -->
        <div id="assignedPortsBox" class="port-range" style="display:none;">
          <select id="startPort" class="port-select">
            <option disabled selected>Start Port</option>
          </select>

          <span class="port-arrow">→</span>

          <select id="endPort" class="port-select">
            <option disabled selected>End Port</option>
          </select>
        </div>

      </div>
    </section>


    <!-- User Create -->
    <section>
      <h3 class="section-title">User Create</h3>
      <div class="card">
        <div class="radio-grid-2">
          <label class="radio"><input type="radio" name="device" id="router"> Router</label>
          <label class="radio"><input type="radio" name="device" id="firstSwitch"> Switch - 1</label>
          <label class="radio"><input type="radio" name="device" id="l3Switch"> L3 Switch</label>
          <label class="radio"><input type="radio" name="device" id="secondSwitch"> Switch - 2</label>
        </div>

        <div class="grid-2">
          <input class="pill" type="text" placeholder="User Name" id="userName">
          <input class="pill" type="password" placeholder="Secret" id="secret">
        </div>
      </div>
    </section>

    <!-- OSPF -->
    <section>
      <h3 class="section-title">OSPF</h3>
      <div class="card">
        <div class="grid-2">
          <input class="pill" type="text" placeholder="Router ospf number" id="ospfNum">
          <input class="pill" type="text" placeholder="Wildcard" id="wildcard">
          <input class="pill" type="text" placeholder="Network" id="network">
          <input class="pill" type="text" placeholder="Area" id="area">
        </div>
      </div>
    </section>

    <!-- NTP -->
    <section>
      <h3 class="section-title">NTP</h3>
      <div class="card">
        <div class="center-row">
          <input class="pill" type="text" placeholder="NTP Server" id="ntpserver">
        </div>
      </div>
    </section>

    <!-- DEPLOY BUTTON -->
    <div class="deploy-container">
      <button class="deploy-btn" type="button" id="deployBtn">Deploy</button>
    </div>

  </main>
</body>
</html>
